<?xml version="1.0" encoding="utf-8"?>
<menu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Theme Toggle -->
    <item
        android:id="@+id/action_toggle_theme"
        android:icon="@drawable/ic_theme_toggle"
        android:title="@string/toggle_theme"
        app:showAsAction="ifRoom" />

    <!-- Font Size Controls -->
    <group android:id="@+id/font_size_group">
        <item
            android:id="@+id/action_increase_font"
            android:icon="@drawable/ic_text_increase"
            android:title="@string/increase_font_size"
            app:showAsAction="never" />

        <item
            android:id="@+id/action_decrease_font"
            android:icon="@drawable/ic_text_decrease"
            android:title="@string/decrease_font_size"
            app:showAsAction="never" />

        <item
            android:id="@+id/action_reset_font"
            android:icon="@drawable/ic_text_reset"
            android:title="@string/reset_font_size"
            app:showAsAction="never" />
    </group>

    <!-- Typewriter Controls -->
    <group android:id="@+id/typewriter_group">
        <item
            android:id="@+id/action_typewriter_slow"
            android:title="打字机慢速"
            app:showAsAction="never" />

        <item
            android:id="@+id/action_typewriter_normal"
            android:title="打字机正常"
            app:showAsAction="never" />

        <item
            android:id="@+id/action_typewriter_fast"
            android:title="打字机快速"
            app:showAsAction="never" />
    </group>

    <!-- Accessibility -->
    <item
        android:id="@+id/action_high_contrast"
        android:icon="@drawable/ic_contrast"
        android:title="@string/high_contrast_mode"
        app:showAsAction="never" />

    <!-- About -->
    <item
        android:id="@+id/action_about"
        android:icon="@drawable/ic_info"
        android:title="@string/about"
        app:showAsAction="never" />

</menu>